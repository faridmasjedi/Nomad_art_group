<%= form_for @artist do |f| %>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :required => true, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="form-group">
        <%= f.label :image %>
        <%= f.url_field :image, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="form-group">
        <%= f.label :about_me %>
        <%= f.text_area :about_me, cols:'30', rows:'10', :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= f.submit nil, :class => 'btn btn-primary'  %>
    </div>
  </div>
<% end %>
