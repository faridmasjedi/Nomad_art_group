<!DOCTYPE html>
<html>
  <head>
    <title>NomadArtGroup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <header>
      <!-- navbar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <a class="navbar-brand" href=<%=root_path%>>
            <div class="text-center">
              <img src="https://nomadartgroup.com/images/Template-Graphics/nomad_logo-garphic.png" class="rounded" alt="Nomad Art Group" width='75' height='75'>
            </div>
          </a>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

              <li class="nav-item active">
                <a class="nav-link" href=<%= root_path %>> Home <span class="sr-only">(current)</span></a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href=<%=events_path%>>Events</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href=<%=artists_path%>>Team</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href=<%=reviews_path%>>Reviews</a>
              </li>

              <!--if the user is admin, there are another navs -->
              <% if @current_user.present? %>
                <% if @current_user.admin? %>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                      Admin
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <%= link_to "All Users",users_path, :class => "dropdown-item" %>
                      <div class="dropdown-divider"></div>

                      <a class="dropdown-item" href=<%= new_event_path %>>New Event</a>
                      <a class="dropdown-item" href=<%= new_genre_path %>>New Genre</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href=<%= new_artist_path %>>New Artist</a>
                      <a class="dropdown-item" href=<%= new_role_path %>>New Role</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href=<%= new_photo_path %>>New Image</a>
                      <a class="dropdown-item" href=<%= new_video_path %>>New Video</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href=<%= new_review_path %>>New Review</a>

                    </div>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>

          <!-- user sign in and sign out and page -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto">
                <% if @current_user.present? %>
                  <li class="nav-item active">
                    <%= link_to "My Page", user_path, :class => "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Logout #{@current_user.email}",login_path, :method => "delete", :class => "nav-link" %>
                  </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to "Sign Up", new_user_path, :class => "nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Sign In", login_path, :class => "nav-link"%>
                  </li>
                <% end %>
              </ul>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      </nav>
    </header>

    <div class="container">
      <%= yield %>
    </div>

    <!-- footer for facebook, instagram and youtube page of nomad art group -->
    <footer>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id='footer'>
        <a class="navbar-brand" href="https://www.facebook.com/nomadartgroup/" target='_blank'>
          <div class="text-center">
            <img src="https://i.imgur.com/fFIzW9y.png" class="rounded" alt="Facebook" width='35' height='35'>
          </div>
        </a>
        <a class="navbar-brand" href='https://www.instagram.com/nomadartgroup/' target='_blank'>
          <div class="text-center">
            <img src="https://i.imgur.com/x1ZL1Ab.png" class="rounded" alt="Instagram" width='35' height='35'>
          </div>
        </a>
        <a class="navbar-brand" href='https://www.youtube.com/channel/UC__IHhHuwMtGl5zfjD-Tu4g' target='_blank'>
          <div class="text-center">
            <img src="https://i.imgur.com/ahMyH95.png" class="rounded" alt="Youtube" width='35' height='35'>
          </div>
        </a>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <%= link_to "Contact Us", contact_us_path, :class => "nav-link" %>
          </li>
        </ul>
      </nav>
    </footer>

  </body>
</html>
